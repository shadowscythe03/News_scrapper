# Environment variables for News Aggregator
# Copy this file to .env and fill in your API keys

# News API key (optional - for additional news sources)
NEWS_API_KEY=your_news_api_key_here

# OpenAI API key (optional - for enhanced chatbot features)
OPENAI_API_KEY=your_openai_api_key_here

# Database configuration
DATABASE_URL=sqlite:///data/news_database.db

# Flask configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Logging level
LOG_LEVEL=INFO

# Web app configuration
WEB_APP_HOST=0.0.0.0
WEB_APP_PORT=5000

# Scraping configuration
SCRAPING_INTERVAL_HOURS=168
MAX_ARTICLES_PER_SOURCE=50
USER_AGENT=NewsAggregator/1.0